{
  "pages": ["pages/index/index", "pages/my/my", "pages/login/login", "pages/webview/webview"],
  "window": {
    "backgroundTextStyle": "dark",
    "navigationBarBackgroundColor": "#3E71F7",
    "navigationBarTitleText": "WeChat",
    "navigationBarTextStyle": "white"
  },
  "sitemapLocation": "sitemap.json",
  "usingComponents": {
    "sv": "components/sv/sv",
    "van-button": "@vant/weapp/button",
    "van-icon": "@vant/weapp/icon",
    "van-image": "@vant/weapp/image",
    "van-cell": "@vant/weapp/cell",
    "van-cell-group": "@vant/weapp/cell-group",
    "van-dialog": "@vant/weapp/dialog",
    "van-popup": "@vant/weapp/popup",
    "van-toast": "@vant/weapp/toast"
  },
  "networkTimeout": {
    "request": 10000,
    "downloadFile": 10000
  },
  "tabBar": {
    "color": "#9B9B9B",
    "selectedColor": "#3571D5",
    "borderStyle": "white",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "images/index.png",
        "selectedIconPath": "images/index-active.png"
      },
      {
        "pagePath": "pages/my/my",
        "text": "我的",
        "iconPath": "images/my.png",
        "selectedIconPath": "images/my-active.png"
      }
    ]
  },
  "permission": {
    "scope.userLocation": {
      "desc": "你的位置信息将用于定位附近门店"
    }
  }
}
